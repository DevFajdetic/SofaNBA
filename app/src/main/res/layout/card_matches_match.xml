<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/bg_white_rounded">

    <ImageView
        android:id="@+id/image_home_team_logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:background="@drawable/bg_rounded_images"
        android:backgroundTint="@color/team_celtics_primary"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_home_team_abbr"
        style="@style/AssistiveNLv1Center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="ATL"
        android:textColor="@color/neutrals_n_lv_1"
        app:layout_constraintEnd_toEndOf="@id/image_home_team_logo"
        app:layout_constraintStart_toStartOf="@+id/image_home_team_logo"
        app:layout_constraintTop_toBottomOf="@id/image_home_team_logo" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@id/image_away_team_logo"
        app:layout_constraintStart_toEndOf="@id/image_home_team_logo"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_match_date"
            android:textStyle="bold"
            android:textAllCaps="true"
            style="@style/DescriptionNLv2Center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Tuesday, 19 Oct 2021"
            android:textColor="@color/neutrals_n_lv_1"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:id="@+id/text_home_score"
                style="@style/DisplayLargeNLv1Center"
                android:textStyle=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="48"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_marginEnd="16dp"
                android:textColor="@color/neutrals_n_lv_1" />

            <TextView
                style="@style/DisplayLargeNLv1Center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="-"
                android:layout_gravity="center"
                android:textColor="@color/neutrals_n_lv_1" />

            <TextView
                android:id="@+id/text_away_score"
                style="@style/DisplayLargeNLv1Center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="98"
                android:layout_gravity="end"
                android:gravity="start"
                android:layout_marginStart="16dp"
                android:textColor="@color/neutrals_n_lv_1" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_tournament_type_status"
            style="@style/DescriptionNLv2Center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:text="FINAL"
            android:textColor="@color/neutrals_n_lv_1" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_away_team_logo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:background="@drawable/bg_rounded_images"
        android:backgroundTint="@color/team_celtics_primary"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_away_team_abbr"
        style="@style/AssistiveNLv1Center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="ATL"
        android:textColor="@color/neutrals_n_lv_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/image_away_team_logo"
        app:layout_constraintStart_toStartOf="@+id/image_away_team_logo"
        app:layout_constraintTop_toBottomOf="@id/image_away_team_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>